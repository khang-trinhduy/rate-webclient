{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(eot|svg|cur|jpg|png|webp|gif|otf|ttf|woff|woff2|ani)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "rate-api",
      "urls": [
        "https://interest-rate-api.herokuapp.com/api/banks?size=50&index=1",
        "https://interest-rate-api.herokuapp.com/api/rates/**",
        "https://interest-rate-api.herokuapp.com/api/rates/recommend",
        "https://interest-rate-api.herokuapp.com/api/rates/search",
        "https://interest-rate-api.herokuapp.com/api/banks/detail/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "3d",
        "timeout": "10s"
      }
    }
  ]
}